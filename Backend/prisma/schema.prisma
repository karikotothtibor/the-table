generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model notifications {
  id             Int                  @id @default(autoincrement())
  user_id        Int
  reservation_id Int
  message        String               @db.Text
  status         notifications_status
  sender_id      Int
  reservation    reservation          @relation(fields: [reservation_id], references: [id], onDelete: Cascade, map: "notifications_ibfk_2")
  users          users                @relation(fields: [user_id], references: [id], onDelete: Cascade, map: "notifications_ibfk_3")

  @@index([reservation_id], map: "reservation_id")
  @@index([user_id], map: "user_id")
}

model opening_hours {
  id          Int    @id @default(autoincrement())
  day_of_week String @db.Text
  open_time   Int
  close_time  Int
}

model reservation {
  id                  Int                @id @default(autoincrement())
  user_id             Int
  table_id            Int
  status_id           Int
  dtime_from          DateTime           @db.DateTime(0)
  dtime_to            DateTime           @db.DateTime(0)
  number_of_customers Int
  guest_name          String             @db.VarChar(255)
  notifications       notifications[]
  users               users              @relation(fields: [user_id], references: [id], onDelete: Cascade, map: "reservation_ibfk_5")
  tables              tables             @relation(fields: [table_id], references: [id], onUpdate: Restrict, map: "reservation_ibfk_6")
  reservation_status  reservation_status @relation(fields: [status_id], references: [id], onUpdate: Restrict, map: "reservation_ibfk_7")
  reviews             reviews[]

  @@index([status_id], map: "status_id")
  @@index([table_id], map: "table_id")
  @@index([user_id], map: "user_id")
}

model reservation_status {
  id          Int                       @id @default(autoincrement())
  status      reservation_status_status
  reservation reservation[]
}

model reviews {
  id             Int         @id @default(autoincrement())
  reservation_id Int
  user_id        Int?
  rating         Int         @db.TinyInt
  comment        String      @db.Text
  created_at     DateTime    @default(now()) @db.DateTime(0)
  users          users?      @relation(fields: [user_id], references: [id], onDelete: Cascade, map: "reviews_ibfk_3")
  reservation    reservation @relation(fields: [reservation_id], references: [id], onDelete: Cascade, map: "reviews_ibfk_4")

  @@index([reservation_id], map: "reservation_id")
  @@index([user_id], map: "user_id")
}

model tables {
  id          Int           @id @default(autoincrement())
  capacity    Int
  reservation reservation[]
}

model users {
  id            Int             @id @default(autoincrement())
  name          String          @unique(map: "name") @db.VarChar(255)
  email         String          @unique(map: "email") @db.VarChar(255)
  phone         String          @db.VarChar(20)
  password      String          @db.VarChar(255)
  role          users_role      @default(USER)
  notifications notifications[]
  reservation   reservation[]
  reviews       reviews[]
}

model reviews_logout {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(255)
  email      String   @db.VarChar(255)
  comment    String   @db.Text
  rating     Int      @db.TinyInt
  created_at DateTime @default(now()) @db.Date
}

enum reservation_status_status {
  szabad
  foglalt
  torolve
  EMPTY_ENUM_VALUE @map("")
}

enum users_role {
  USER
  ADMIN
  LETILTVA
}

enum notifications_status {
  ELKULDVE
  SIKERTELEN
  VARAKOZAS
  EMPTY_ENUM_VALUE @map("")
}
